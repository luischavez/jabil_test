<h2>Buildings</h2>

<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="table-buildings" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0"></table>
    </div>
</div>

@section Scripts {
<script>(function () {
        $('#table-buildings').dataTable({
            serverSide: true,
            ajax: "/Building/DataTable",
            columns: [
                {
                    name: 'pkbuilding',
                    data: 'pkbuilding',
                    title: "PKBuilding",
                    sortable: true,
                    searchable: false
                },
                {
                    name: 'name',
                    data: "name",
                    title: "Building",
                    sortable: true,
                    searchable: false
                },
                {
                    name: 'available',
                    data: "available",
                    title: "Available",
                    sortable: true,
                    searchable: false
                }
            ]
        });
    })();
</script>
}
