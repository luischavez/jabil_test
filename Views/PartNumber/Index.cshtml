<h2>Part Numbers</h2>

<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="table-part-numbers" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0"></table>
    </div>
</div>

@section Scripts {
    <script>(function () {
        $('#table-part-numbers').dataTable({
            serverSide: true,
            ajax: "/PartNumber/DataTable",
            columns: [
                {
                    name: 'pkpartNumber',
                    data: 'pkpartNumber',
                    title: "PKPartNumber",
                    sortable: true,
                    searchable: false
                },
                {
                    name: 'name',
                    data: "name",
                    title: "PartNumber",
                    sortable: true,
                    searchable: false
                },
                {
                    name: 'available',
                    data: "available",
                    title: "Available",
                    sortable: true,
                    searchable: false
                }
            ]
        });
    })();</script>
}
